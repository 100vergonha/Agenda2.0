<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Gerenciar Contato</h1>
      <p class="text-center lead">Crie ou edite suas informações de contato abaixo</p>

      <%- include('includes/messegs') %>

      <% if(contato._id) { %>
        <form action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else { %>
        <form action="/contato/register" method="POST">
      <% } %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="nome">Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" id="nome" name="nome" placeholder="Seu nome">
        </div>
        <div class="form-group">
          <label for="sobrenome">Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" id="sobrenome" name="sobrenome" placeholder="Seu sobrenome">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input value="<%= contato.email %>" type="email" class="form-control" id="email" name="email" placeholder="Seu endereço de e-mail">
        </div>
        <div class="form-group">
          <label for="telefone">Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" id="telefone" name="telefone" placeholder="Seu número de telefone">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
  